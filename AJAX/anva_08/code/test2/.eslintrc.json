{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
		
		"complexity": [2, 5],
		"max-statements": [2, 15],
		"max-statements-per-line": [2, { "max": 1 }],
		"max-depth":[1, 2]
		
    }
}