{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "complexity": [
      2,
      5
    ],
    "max-statements": [
      2,
      7
    ],
    "max-statements-per-line": [
      2,
      {
        "max": 4
      }
    ],
    "no-console":"off"
  }
}